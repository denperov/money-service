root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[Makefile]
indent_style = tab
indent_size = 4

[Dockerfile]
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.sql]
indent_style = tab
indent_size = 4
